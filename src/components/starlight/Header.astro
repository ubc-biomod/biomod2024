---
const { links } = Astro.props;
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@400;700&display=swap" rel="stylesheet" />
</head>

<nav class="navbar">
  <div class="icon-circle"></div>
  <span class="navbar-title">UBC BIOMOD</span>
  <div class="navbar-links">
    {links.map((link: { href: string | URL | null | undefined; title: unknown; }) => <a href={link.href}>{link.title}</a>)}
  </div>
  <div class="lab-notebook-button">
    <a href="/lab-notebook" class="nav-link">
        <span class="notebook-text">Lab Notebook</span>
      <svg
        class="external-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </a>
  </div>
</nav>

<style>
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    background: transparent;
    width: 100%;
  }

  .icon-circle {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: #ffd966;
    margin-right: 16px;
  }

  .navbar-title {
    color: #000;
    font-family: "Inria Sans", sans-serif;
    font-size: 24px;
    font-weight: 450;
    align-items: center;
  }

  .navbar-links {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .navbar-links a {
    text-decoration: none;
    font-family: "Inria Sans", sans-serif;
    font-weight: 450;
    color: black;
    transition: color 0.2s ease;
    align-items: center;
  }

  .lab-notebook-button {
    display: flex;
    align-items: center;
  }

  .notebook-text {
    color: white; 
    align-items: center;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border-radius: 999px;
    background-color: #000;
    color: white;
    font-family: "Inria Sans", sans-serif;
    font-weight: 450;
    text-decoration: none;
    border: 1px solid #000;
    transition: background-color 0.2s ease;
  }

  .nav-link:hover {
    background-color: white;
  }

  .navbar-links a:hover {
    color: #ffd966;
  }

  .external-icon {
    stroke: #ffd966;
  }
</style>
